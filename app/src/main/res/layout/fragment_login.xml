<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.LoginFragment">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_appbar_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_16dp">
        <include
            layout="@layout/layout_user_chat_login"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_login_btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginVertical="@dimen/padding_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stream_sdk_v_x_x_x"
                android:textSize="@dimen/Body"
                android:textAlignment="center"
                android:textColor="@color/grey_gainsboro"
                app:fontWeight="500"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>